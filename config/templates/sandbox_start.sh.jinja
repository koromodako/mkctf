#!/usr/bin/env bash
name="{{challenge.slug}}-sandbox-$(pwgen 20 1)"

timeout --foreground --kill-after=10 480 \
    docker run \
    --rm -i \
    --cpus=1 \
    --name=${name} \
    --ulimit nproc=1024:1024 \
    --ulimit fsize=10000:10000 \
    --ulimit nofile=1024:2048 \
    --ulimit nice=1 \
    {{repo.conf.docker.registry}}/{{repo.conf.docker.user}}/{{challenge.slug}}-sandbox

docker kill ${name} >/dev/null 2>&1 || exit 0
